@model List<ContatoModelo>

@{
    ViewData["Title"] = "Lista de Contatos";
}

<div class="text-center">
    @if (TempData["MensagemSucesso"] != null)
    {
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
    </div>
    }
    <br />
    <h1 class="display-4">Lista de Contatos!</h1>
    
   

        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <a class="btn btn-secondary" role ="button"asp-controller="ContatoController1" asp-action="Criar">Adicionar Novo Contato</a>
           
        </div>
    
    <br/>

    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">E-mail</th>
      <th scope="col">Contato</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>

      @if(Model != null && Model.Any())
      {
        foreach(ContatoModelo contato in Model)
        {
            <tr>
                <th scope="row">@contato.Id</th>
                <td>@contato.nome</td>
                <td>@contato.email</td>
                <td>@contato.telemovel</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a role="button" class="btn btn-dark " asp-route-id="@contato.Id" asp-controller="ContatoController1" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-success" asp-route-id="@contato.Id" asp-controller="ContatoController1" asp-action="apagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
        }
      }
            
    
    
  </tbody>
</table>
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
             @TempData["MensagemErro"] 
         </div>
    }
</div>

